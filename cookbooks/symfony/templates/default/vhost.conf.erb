<VirtualHost *:8000>
  ServerAlias <%= @hostname %>
  ServerAdmin webmaster@localhost
  DocumentRoot /home/webapps/<%= @application %>/<%= @web_root %>
  ServerName <%= @hostname %>
  DirectoryIndex app.php

  <Directory /home/webapps/<%= @application %>/<%= @web_root %>>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    AuthUserFile /home/webapps/ssv2_dev/.htpasswd
    AuthName "Please enter the dev ID and password"
    AuthType Basic
    require valid-user
    order deny,allow
  </Directory>
</VirtualHost>
