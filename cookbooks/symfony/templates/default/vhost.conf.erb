<VirtualHost *:8000>
  ServerAlias <%= @hostname %>
  ServerAdmin webmaster@localhost
  DocumentRoot /home/webapps/<%= @application %>/<%= @web_root %>
  ServerName <%= @hostname %>
  DirectoryIndex app.php

  <Directory /home/webapps/<%= @application %>/<%= @web_root %>>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    allow from all
  </Directory>
</VirtualHost>
