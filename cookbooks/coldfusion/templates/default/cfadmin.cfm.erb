<cfscript>
adminObj = createObject("component","CFIDE.adminapi.administrator").login("<%= @params[:cf_admin_pass ] %>");
datasourceObj =  createObject("component","CFIDE.adminapi.datasource");
mailObj = createObject("component","CFIDE.adminapi.mail");
runtimeObj = createObject("component","CFIDE.adminapi.runtime");
extensionsObj = createObject("component","CFIDE.adminapi.extensions");
debugObj = createObject("component","CFIDE.adminapi.debugging");


//set datasource
stDSN = structNew(); 
stDSN.name="SSv2"; 
stDSN.host = "<%= @params[:hostname ] %>"; 
stDSN.database = "<%= @params[:master_schema ] %>"; 
stDSN.username = "<%= @params[:db_user ] %>"; 
stDSN.password = "<%= @params[:db_pass ] %>"; 
datasourceObj.setMySQL5( argumentCollection=stDSN);

stDSN = structNew(); 
stDSN.name="SSv2_MultiStatement"; 
stDSN.host = "<%= @params[:hostname ] %>"; 
stDSN.database = "<%= @params[:multi_schema ] %>"; 
stDSN.username = "<%= @params[:db_user ] %>"; 
stDSN.password = "<%= @params[:db_pass ] %>"; 
datasourceObj.setMySQL5( argumentCollection=stDSN);

stDSN = structNew(); 
stDSN.name="SSv2_Stats"; 
stDSN.host = "<%= @params[:hostname ] %>"; 
stDSN.database = "<%= @params[:stats_schema ] %>"; 
stDSN.username = "<%= @params[:db_user ] %>"; 
stDSN.password = "<%= @params[:db_pass ] %>"; 
datasourceObj.setMySQL5( argumentCollection=stDSN);


//set custom tag paths
extensionsObj.setCustomTagPath('<%= @params[:webroot ] %>/customtags');

//set custom tag paths
extensionsObj.setMapping('/ss','<%= @params[:webroot ] %>');

//set debug ips
debugObj.setIP('10.192.183.10');
debugObj.setDebugProperty('enableDebug',true);
debugObj.setDebugProperty('enableRobustExceptions',true);

</cfscript>
